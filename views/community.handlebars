<div class="row">
  <div class="col s12">
    <div id="messageForm">
      {{#if user}}
        <h4>Post Bulletin</h4>
        <form id="eventForm" action="/event" method="post">
            <label>Name of Event:</label>
            <input type="text" name="event" required="true" maxlength="50" /><br/>
            <label>Date of Event:</label>
            <input type="date" name="date"/>
            <div class="input-field">
              <label>Description:</label>
              <textarea class="materialize-textarea" name="description" length="250" maxlength="250" required="true"></textarea> 
            </div>
            <input type="submit" value="Submit"/>
        </form>
        {{^}}
          <p>Please <a class="modal-trigger" href="#modal1">login</a> to post on the message board</p>
      {{/if}}
    </div>
  </div>
</div>

